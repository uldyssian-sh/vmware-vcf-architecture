{
  "name": "@uldyssian-sh/vmware-vcf-architecture",
  "version": "1.0.0",
  "description": "Enterprise VMware Cloud Foundation architecture automation and management solution",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "lint:check": "eslint . --ext .js,.ts,.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "echo \"Build process not required for this project\" && exit 0",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "prepare": "husky install || true",
    "validate": "npm run lint:check && npm run format:check && npm run test && npm run security:audit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uldyssian-sh/vmware-vcf-architecture.git"
  },
  "keywords": [
    "vmware",
    "vcf",
    "cloud-foundation",
    "automation",
    "enterprise",
    "infrastructure",
    "devops",
    "ci-cd",
    "security"
  ],
  "author": {
    "name": "uldyssian-sh",
    "url": "https://github.com/uldyssian-sh"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uldyssian-sh/vmware-vcf-architecture/issues"
  },
  "homepage": "https://github.com/uldyssian-sh/vmware-vcf-architecture#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^1.7.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "lint-staged": {
    "*.{js,ts,json,md,yml,yaml}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
